{% extends 'TSEPAdminBundle::admin.html.twig' %}

{% block content %}
    <h1>Page</h1>
    
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
            <tr>
                <th>Url</th>                <td>{{ entity.url }}</td>        </tr>
            <tr>
                <th>Text</th>                <td>{{ entity.text }}</td>        </tr>
        </tbody>
    </table>
    
    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_page') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('admin_page_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>
            <form action="{{ path('admin_page_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
